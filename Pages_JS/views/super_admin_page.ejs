<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/navBar.css">
   <title>Super Admin Page</title>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
   <style>
      /* General page styles */
      body {
         font-family: Arial, sans-serif;
         background-color: #f4f4f4;
         margin: 0;
         padding: 0;
      }
      h1 {
         text-align: center;
         margin-top: 20px;
         font-size: 32px;
         color: #333;
      }
      .container {
         max-width: 1200px;
         margin: 30px auto;
         padding: 20px;
         background-color: #fff;
         box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
         border-radius: 8px;
      }

      /* Table styling */
      table {
         width: 100%;
         border-collapse: collapse;
         margin: 20px 0;
      }
      table thead {
         background-color: #007BFF;
         color: white;
      }
      table th, table td {
         padding: 12px 15px;
         text-align: center;
         border: 1px solid #ddd;
      }
      table tbody tr:nth-child(even) {
         background-color: #f2f2f2;
      }
      table tbody tr:hover {
         background-color: #e6f7ff;
      }

      /* Button styling */
      .btn {
         background-color: #007BFF;
         color: white;
         border: none;
         padding: 10px 20px;
         border-radius: 5px;
         cursor: pointer;
         font-size: 14px;
         transition: background-color 0.3s ease;
         text-decoration: none;
      }
      .btn:hover {
         background-color: #0056b3;
      }

      .btn-danger {
         background-color: #dc3545;
      }
      .btn-danger:hover {
         background-color: #c82333;
      }

      /* Additional styling */
      .actions {
         display: flex;
         justify-content: center;
         gap: 10px;
      }

      .footer {
         text-align: center;
         margin-top: 30px;
         color: #666;
         font-size: 14px;
      }
   </style>
</head>
<body>
    <%- include('partials/navBar') %>
   <div class="container">
      <h1>Super Admin Dashboard</h1>
      <table>
         <thead>
            <tr>
               <th>Username</th>
               <th>Email</th>
               <th>Role</th>
               <th>Actions</th>
            </tr>
         </thead>
         <tbody>
            <% users.forEach(user => { %>
            <tr>
               <td><%= user.name %></td>
               <td><%= user.email %></td>
               <td><%= user.role %></td>
               <td class="actions">
                  <% if (user.role !== 'super_admin') { %>
                     <% if (user.role === 'admin') { %>
                        <a href="/demote_to_user/<%= user.ID %>" class="btn btn-danger">Demote to User</a>
                     <% } else { %>
                        <a href="/promote_to_admin/<%= user.ID %>"class="btn">Promote to Admin</a>
                     <% } %>
                  <% } %>
               </td>
            </tr>
            <% }); %>
         </tbody>
      </table>
   </div>
</body>
</html>
